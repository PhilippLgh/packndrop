    "mocha": "^7.0.0",
    "nock": "^11.7.2",
    "nyc": "^15.0.0",
    "ts-node": "^8.6.1",
    "typescript": "^3.7.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
